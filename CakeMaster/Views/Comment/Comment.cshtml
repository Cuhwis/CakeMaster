@model IEnumerable<Comment>


@{
    ViewData["Title"] = "View";
}

<h1>Comments</h1>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/fontawesome-free-5.11.2-web/css/all.css" rel="stylesheet" />
</head>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <tr>
            <th>Name</th>
            <th>Text</th>
        </tr>
        @foreach (Comment c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td>@c.Text</td>
            </tr>
        }
    </table>

}
else
{
    <div class="text-center">No Comments = [</div>
}
}
<a class="btn btn-sm btn-secondary navbar-btn"
   asp-controller="Admin" asp-action="Index"
   asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()">
    <i class="fas fa-angle-double-left"></i>
</a>

